<h1>Create New Category</h1>

<form action="/categories/create" method="POST" class="mt-4">
    <div class="form-group">
        <label for="name">Category Name</label>
        <input type="text" id="name" name="name" class="form-control" placeholder="Enter category name" required>
    </div>

    <div class="form-group mt-3">
        <label for="gender">Gender</label>
        <select id="gender" name="gender" class="form-control" required>
            <option value="" disabled selected>Select gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-4">Create Category</button>
    <a href="/categories" class="btn btn-secondary mt-4">Cancel</a>
</form>
