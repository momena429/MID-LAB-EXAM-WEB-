<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/mystyles.css">
    <style>
        /* Overall Page Styling */
        body {
            background-color: #f0f0f0;
            font-family: Arial, sans-serif;
        }

        h1 {
            color: #00695c; /* Dark green for heading */
            text-align: center;
            margin-top: 20px;
        }

        .btn-primary {
            background-color: #004d40; /* Dark green */
            border-color: #004d40;
        }

        .btn-primary:hover {
            background-color: #00796b; /* Lighter green */
            border-color: #00796b;
        }

        .btn-warning {
            background-color: #ffb74d; /* Warning button in orange */
            border-color: #ffb74d;
        }

        .btn-danger {
            background-color: #d32f2f; /* Red button */
            border-color: #d32f2f;
        }

        .btn-danger:hover {
            background-color: #c62828; /* Darker red for hover effect */
            border-color: #c62828;
        }

        .table {
            background-color: #ffffff;
            border: 1px solid #dcdcdc;
            border-radius: 8px;
        }

        .table-bordered th, .table-bordered td {
            border: 1px solid #004d40;
        }

        .table thead {
            background-color: #004d40; /* Dark green header */
            color: #fff;
        }

        .table tbody tr:hover {
            background-color: #c8e6c9; /* Light green hover effect */
        }

        .text-center {
            text-align: center;
        }

        .mb-3 {
            margin-bottom: 15px;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <h1>Categories</h1>
        <a href="/categories/new" class="btn btn-primary mb-3">Add New Category</a>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (categories.length > 0) { %>
                    <% categories.forEach(category => { %>
                        <tr>
                            <td><%= category._id %></td>
                            <td><%= category.name %></td>
                            <td><%= category.gender %></td>
                            <td>
                                <a href="/categories/<%= category._id %>/edit" class="btn btn-warning">Edit</a>
                                <form action="/categories/<%= category._id %>?_method=DELETE" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="text-center">No categories available</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

</body>
</html>
