<div class="container my-5">
    <h2>Your Cart</h2>
    
    <!-- Cart List -->
    <ul class="list-group mb-3">
        <% if (cart.length > 0) { %>
            <% cart.forEach((item, index) => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <form action="/cart/remove" method="GET" class="d-inline">
                        <input type="hidden" name="id" value="<%= item.productId %>">
                        <button class="btn btn-sm btn-danger" type="submit">Remove</button>
                    </form>
                </li>
                
            <% }); %>
        <% } else { %>
            <li class="list-group-item text-muted">Your cart is empty.</li>
        <% } %>
    </ul>

    <!-- Cart Total -->
    <h5 class="mt-3">Total: PKR <%= total.toFixed(2) %></h5>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-between">
        <a href="/" class="btn btn-outline-dark">Continue Shopping</a>
        <% if (cart.length > 0) { %>
            <form action="/cart/checkout" method="GET">
                <button type="submit" class="btn btn-primary">Checkout</button>
            </form>
        <% } else { %>
            <button class="btn btn-primary" disabled>Checkout</button>
        <% } %>
    </div>
</div>
